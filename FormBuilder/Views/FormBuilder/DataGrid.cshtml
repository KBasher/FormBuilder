@{
    ViewBag.Title = "Data List";
}

<h2>Form Name: @ViewBag.FormTitle</h2>

<style>
    /*Loading*/
    #loadingmessage {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0px;
        left: 0px;
        /*background-color:yellow;*/
        z-index: 9999999999;
        text-align: center;
    }

        #loadingmessage i {
            font-size: 50px;
            /* width: 100px; */
            position: absolute;
            top: 45%;
            color: #ffb200;
        }
    .file-img
    {
        width:50px;
    }
    /*Loading*/
</style>

@if(ViewBag.PatientId != 0)
{
<div class="row">
    <div class="col-md-6">
        <a href="/FormBuilder/DataFilter?patientId=@ViewBag.PatientId" class="btn btn-success">Back To Form Search</a>
    </div>
    <div class="col-md-6"><h5>Patient Name: </h5>@ViewBag.PatientName</div>

</div>
}
<div id="data-grid-container" class="dataSection data-grid">
</div>

<div class="filter-popup" onclick="clickFilterPopup(this, event)">
    <div onclick="clicksortascending(this, event, 'datagrid')" class="sort-ascending">
        <i class="fa fa-sort-alpha-asc" aria-hidden="true"></i>
        Sort Ascending
    </div>
    <div onclick="clicksortdescending(this, event)" class="sort-descending">
        <i class="fa fa-sort-alpha-desc" aria-hidden="true"></i>
        Sort Descending
    </div>
    <div onclick="clicksortclear(this, event)" class="clear-sort">
        <i class="fa fa-eraser" aria-hidden="true"></i>
        Clear Sort
    </div>
    <div class="filter-container">
        <div class="input-container">
            <input class="searchinput" onkeyup="StartFilter(this, event)" type="text" />
            <i class="filter-search-text fa fa-times" onclick="ClearFilterText(this, event)" aria-hidden="true"></i>
        </div>
        <div class="filter-items">
            <div class="container">
            </div>
        </div>
    </div>
</div>

<div id='loadingmessage' style='display:none'>
    <i class="fa fa-spinner fa-spin"></i>
</div>

@section Scripts {

    <script type="text/ecmascript">
        $(document).ready(function () {
            LoadDataGrid(@ViewBag.FormId, @ViewBag.PatientId);
        });
    </script>

}
