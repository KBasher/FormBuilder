            </div>


            <div class="page-content">
                <div class="container-fluid">
                    <div id="formio"></div>
                </div>
            </div>*@

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/ecmascript">
        $(document).ready(function () {
            BindForm();
        });
    </script>
}
